<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="Icetig\Bundle\UserBundle\Repository\UserRepository" name="Icetig\Bundle\UserBundle\Entity\User">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>

    <field name="email" unique="true" />

    <field name="password" />

    <field name="salt" />

    <field name="firstName" column="first_name" nullable="true" />

    <field name="lastName" column="last_name" nullable="true" />

    <field name="dateOfBirth" column="date_of_birth" nullable="true" type="datetime" />

    <field name="phone" nullable="true" />

    <one-to-many target-entity="Icetig\Bundle\PedagoBundle\Entity\Sanction" mapped-by="subject" field="sanctions" />

    <one-to-many target-entity="Icetig\Bundle\PedagoBundle\Entity\Sanction" mapped-by="issuer" field="issued_sanctions" />

    <many-to-many target-entity="Icetig\Bundle\UserBundle\Entity\Group" field="groups" mapped-by="users" />
  </entity>
</doctrine-mapping>
