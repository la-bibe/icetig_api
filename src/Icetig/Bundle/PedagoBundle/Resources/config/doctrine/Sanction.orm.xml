<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity repository-class="Icetig\Bundle\PedagoBundle\Repository\SanctionRepository" name="Icetig\Bundle\PedagoBundle\Entity\Sanction">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="date" type="datetime" column="date"/>
        <field name="state" type="integer" column="state"/>
        <field name="startDate" type="datetime" column="start_date" nullable="true"/>
        <field name="endDate" type="datetime" column="end_date" nullable="true"/>
        <field name="reason" column="reason"/>
        <field name="task" column="task" nullable="true"/>

        <many-to-one target-entity="Icetig\Bundle\UserBundle\Entity\User" field="subject" inversed-by="sanctions">
            <join-column name="subject" />
        </many-to-one>

        <many-to-one target-entity="Icetig\Bundle\UserBundle\Entity\User" field="issuer" inversed-by="issued_sanctions">
            <join-column name="issuer" />
        </many-to-one>
    </entity>
</doctrine-mapping>
